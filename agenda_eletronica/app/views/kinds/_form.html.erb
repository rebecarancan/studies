<br>
<%= form_with(model: kind, local: true, html: { class: "basic-grey"}) do |form| %>
  <h1>Tipos de Contatos</h1>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="actions">
    <%= form.submit "Enviar", class: "btn btn-danger" %>
    <%= link_to t('buttons.back'), kinds_path, class: "btn btn-secondary" %>
  </div>

  <% if kind.errors.any? %>
    <% kind.errors.full_messages.each do |message| %>
      <script>
        $.notify("<%= message %>", "error");
      </script>
    <% end %>
  <% end %>
<% end %>


