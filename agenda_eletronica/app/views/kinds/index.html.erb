<br>
<div class="basic-grey">
  <script>
    $.notify("<%= notice %>", "success");
  </script>

  <h1><%= @kinds.model_name.human(count: @kinds.count) %></h1>

  <table>
    <thead>
      <tr>
        <th><%= @kinds.human_attribute_name("description") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @kinds.each do |kind| %>
        <tr>
          <td><%= kind.description %></td>
          <td><%= link_to t('buttons.edit'), edit_kind_path(kind), class: "badge badge-pill badge-secondary" %></td>
          <td><%= link_to t('buttons.destroy'), kind, method: :delete, data: { confirm: t('messages.confirm') }, class: "badge badge-pill badge-dark" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('buttons.home'), home_index_path, class: "btn btn-secondary" %>
  <%= link_to t('buttons.new'), new_kind_path, class: "btn btn-danger" %>

</div>
