<p id="notice"><%= notice %></p>

<h1><%= @adresses.model_name.human(count: @adresses.count) %></h1>

<table>
  <thead>
    <tr>
      <th><%= @adresses.human_attribute_name("street") %></th>
      <th><%= @adresses.human_attribute_name("city") %></th>
      <th><%= @adresses.human_attribute_name("state") %></th>
      <th><%= @adresses.human_attribute_name("contact") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adresses.each do |adress| %>
      <tr>
        <td><%= adress.street %></td>
        <td><%= adress.city %></td>
        <td><%= adress.state %></td>
        <td><%= adress.contact %></td>
        <td><%= link_to t('buttons.show'), adress %></td>
        <td><%= link_to t('buttons.edit'), edit_adress_path(adress) %></td>
        <td><%= link_to t('buttons.destroy'), adress, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('buttons.new'), new_adress_path %>
